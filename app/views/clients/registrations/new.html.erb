<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

    <div class="field">
      <%= f.label "First name" %><br />
      <%= f.text_field :fname, autofocus: true, id: "First_name" %>
    </div>

    <div class="field">
      <%= f.label "Last name" %><br />
      <%= f.text_field :lname, autofocus: true, id: "Last_name" %>
    </div>

    <div class="field">
      <%= f.label :Phone %><br />
      <%= f.text_field :phone, autofocus: true, id: "Phone" %>
    </div>

    <div class="field">
      <%= f.label :Address %><br />
      <%= f.text_field :address, autofocus: true, id: "Address" %>
    </div>

    <div class="field">
      <%= f.label :Email %><br />
      <%= f.email_field :email, autofocus: true, id: "Email" %>
    </div>

    <div class="field">
      <%= f.label :Password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", id: "Password"%>
    </div>

    <div class="field">
      <%= f.label :Password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", id: "Password_confirmation" %>
    </div>

    <div class="actions">
      <%= f.submit "Create Account" %>
    </div>
<% end %>

<%= render "clients/shared/links" %>
